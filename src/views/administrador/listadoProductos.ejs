<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;700&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/listaadmin.css">
    <title>CRUD - Administrador</title>
</head>
<body>
  <main class="container-fluid">
    <!--Navbar-->
    <%- include('../partials/headerNegro.ejs') %>
    
      

    <!--Listado de Productos-->
    <section class="row container col-12">

        <article class="titulo d-flex justify-content-center border-bottom border-dark col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h5>Listado de Productos</h5>
        </article>

        <article class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 mt-2 mb-2">
            <a href="/administrador/create"><button type="button" class="btn btn-danger mt-1" style="background-color: #63B4D1 ; border: #63B4D1">Agregar Producto<ion-icon name="add-circle-outline"></ion-icon></button></a>
            </article>
            <article class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-2 mb-2">
              <form  class="p-2 col-12 d-flex justify-content-between " action="/administrador/search_results" method="GET">
                <input class="form-control mr-sm-2" type="search" name="search">
                <button style="background-color: #63B4D1; color: white; border: #63B4D1;" class="btn btn-outline-info my-2 my-sm-0" type="submit"><ion-icon name="search-outline"></ion-icon></button>
              </form>
            </article>
        
          <article class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <table class="table text-white" style="background-color: #000000;">
              <thead>
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Tour/Estadio</th>
                  <th scope="col">Ver</th>
                  <th scope="col">Editar</th>
                  <th scope="col">Borrar</th>
                </tr>
              </thead>
              <tbody>
                <% estadios.forEach(estadio => { %>
                <tr>
                  <td><%= estadio.id%> </td>
                  <td><%= estadio.stadiumName%> - <%= estadio.footballTeam%> </td>
                  <td><a href="/administrador/detalleAdmin/<%= estadio.id%>"> <ion-icon name="eye-outline"></ion-icon></a></td>
                  <td><a href="/administrador/edit/<%= estadio.id%>"> <ion-icon name="pencil-outline"></ion-icon></a></td>
                  <td><a href="/administrador/delete/<%= estadio.id%>"><ion-icon name="trash-outline"></ion-icon></a></td>
                </tr>
                <% }); %>
              </tbody>
            </table> 
          </article>       

        
        


    </section>
  </main>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
</body>
</html>